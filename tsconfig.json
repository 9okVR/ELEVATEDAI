{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "experimentalDecorators":  true,
                            "useDefineForClassFields":  false,
                            "module":  "ESNext",
                            "lib":  [
                                        "ES2022",
                                        "DOM",
                                        "DOM.Iterable"
                                    ],
                            "skipLibCheck":  true,
                            "types":  [
                                          "node"
                                      ],
                            "moduleResolution":  "bundler",
                            "isolatedModules":  true,
                            "allowJs":  true,
                            "jsx":  "react-jsx",
                            "paths":  {
                                          "@/*":  [
                                                      "./*"
                                                  ]
                                      },
                            "esModuleInterop":  true,
                            "allowSyntheticDefaultImports":  true,
                            "noEmit":  true
                        },
    "exclude":  [
                    "node_modules",
                    "dist",
                    "supabase/**",
                    "supabase-edge/**"
                ]
}

